{% extends '@Gescom/Default/base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <section id="product_listPage" class="container">
        <div class="row">
            <div class="col s12">
                <h4>Produits</h4>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <table class="striped responsive-table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Cat√©gorie</th>
                        <th>Fournisseur</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.id }}</td>
                            <td>{{ product.name }}</td>
                            <td>{{ product.category.name }}</td>
                            <td>
                                {% for supplier in product.productSupplier %}
                                    {{ supplier.supplier.name }}
                                {% endfor %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        {# Button to add new product #}
        <a href="/produit/nouveau" class="waves-effect waves-light btn add_product_btn">
            <i class="material-icons left">launch</i>
            Ajouter un nouveau produit
        </a>
    </section>
{% endblock %}