{% block title %}Ajouter un produit{% endblock %}

{% block body %}

    <section id="product_listPage" class="container">
        {# Button to add new product #}
        <a href="/produit/" class="waves-effect waves-light btn">
            <i class="material-icons left">list</i>
            Voir la liste des produits
        </a>

        <div id="product_add" class="col s12">
            {{ form(form) }}
            {#{{ form_start(form) }}
                <div class="col s12 ">
                    {{ form_errors(form) }}
