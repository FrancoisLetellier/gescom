{% extends '@Gescom/Default/base.html.twig' %}

{% block title %}Liste des fournisseurs{% endblock %}

{% block body %}
    <section id="supplier_listPage" class="container">
        <div class="row">
            <div class="col s12">
                <h4>Fournisseur</h4>
            </div>
        </div>

        {# Button to add new product #}
        <a href="/fournisseur/nouveau" class="waves-effect waves-light btn add_btn">
            <i class="material-icons left">launch</i>
            Ajouter un nouveau fournisseur
        </a>

        <div class="row">
            <div class="col s12">
                <table class="striped responsive-table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Ville</th>
                        <th>Code postal</th>
                        <th>Delais de livraison</th>
                        <th>Note</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for supplier in suppliers %}
                        <tr>
                            <td>{{ supplier.id }}</td>
                            <td>{{ supplier.name }}</td>
                            <td>{{ supplier.email }}</td>
                            <td>{{ supplier.town }}</td>
                            <td>{{ supplier.postalCode }}</td>
                            <td>{{ supplier.deliveryTime }}</td>
                            <td>{{ supplier.note }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        {# Button to add new product #}
        <a href="/fournisseur/nouveau" class="waves-effect waves-light btn add_btn">
            <i class="material-icons left">launch</i>
            Ajouter un nouveau fournisseur
        </a>
    </section>
{% endblock %}