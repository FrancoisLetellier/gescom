{% extends '@Gescom/Default/base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <section id="product_listPage">
        <div class="row">
            <div class="col s12">
                <h4>Produits</h4>
            </div>
        </div>

        {% if is_granted('ROLE_VENDOR') %}
            {# Button to add new product #}
            <a href="{{ path('productAdd') }}" class="waves-effect waves-light btn add_product_btn">
                <i class="material-icons left">launch</i>
                Ajouter un nouveau produit
            </a>
        {% endif %}

        <div class="row">
            <div class="col s12">
                <table class="striped responsive-table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom du produit</th>
                        <th>Cat√©gorie</th>
                        <th>Fournisseur</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for product in products %}
                            {% if product.ProductSupplier is empty %}
                            {% else %}
                                <tr>
                                    <td>{{ product.id }}</td>
                                    <td>{{ product.name }}</td>
                                    <td>{{ product.category.name }}</td>
                                    <td>
                                        {% for supplier in product.productSupplier %}
                                            <span class="supplier-item">{{ supplier.supplier.name }}</span>
                                        {% endfor %}
                                    </td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        {% include 'GescomBundle:Elements:pagination.html.twig' %}

        {% if is_granted('ROLE_VENDOR') %}
            {# Button to add new product #}
            <a href="{{ path('productAdd') }}" class="waves-effect waves-light btn add_product_btn">
                <i class="material-icons left">launch</i>
                Ajouter un nouveau produit
            </a>
        {% endif %}
    </section>
{% endblock %}