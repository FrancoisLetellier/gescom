{% extends '@Gescom/Default/base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    {% if is_granted('ROLE_USER') %}
    {% else %}
        <div class="row">
            <div class="col s12">
                <h3>Connexion</h3>
            </div>
        </div>

        <div id="user_login">
            {# S'il y a une erreur, on l'affiche dans un joli cadre #}
            {% if error %}
                {% import '@Gescom/Elements/macro_alert.html.twig' as box %}
                {{ box.alertBox('error', 'Erreur : ', 'Vous identifiants sont incorrect !') }}
            {% endif %}

            {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
            <form action="{{ path('login_check') }}" method="post">

                <div class="input-field col s12">
                    <input type="text" id="email" name="_username" value="{{ last_username }}" />
                    <label for="_username">Email :</label>
                </div>

                <div class="input-field col s12">
                    <input type="password" id="password" name="_password" />
                    <label for="_password">Mot de passe :</label>
                </div>

                <div class="input-field col s12">
                    <input type="submit" value="Connexion" />
                </div>
            </form>
        </div>
    {% endif %}

{% endblock %}